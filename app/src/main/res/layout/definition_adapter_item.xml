<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/item_background"
    android:padding="10dp">
    <TextView
        android:id="@+id/txtDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/TextAppearance.AppCompat.Caption"
        tools:text="Date"/>
    <TextView
        android:id="@+id/txtDefinition"
        style="@style/TextAppearance.AppCompat.Body1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Definition"
        android:layout_below="@+id/txtDate"/>
    <LinearLayout
        android:id="@+id/layoutAuthor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtDefinition"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/txtAuthor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/TextAppearance.AppCompat.Body1"
            android:layout_weight="6"
            tools:text="Author" />
        <TextView
            android:id="@+id/txtThumbsUp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/TextAppearance.AppCompat.Body1"
            android:drawableStart="@drawable/ic_thumb_up_24dp"
            android:drawablePadding="5dp"
            android:layout_weight="1"
            tools:text="100"/>
        <TextView
            android:id="@+id/txtThumbsDown"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/TextAppearance.AppCompat.Body1"
            android:drawableStart="@drawable/ic_thumb_down_24dp"
            android:drawablePadding="5dp"
            android:layout_weight="1"
            tools:text="50"/>
    </LinearLayout>

    <TextView
        android:id="@+id/txtExample"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/TextAppearance.AppCompat.Caption"
        android:layout_below="@+id/layoutAuthor"
        tools:text="examples:"/>
</RelativeLayout>